<div class="page-home">
  <% if current_user %>
    <h3 class="page-home__header">Organization: <%= @tenant.name %></h3>
    <%= render 'projects/list' %>
  <% else %>
    <div class="jumbotron">
      <h2 class="jumbotron__z">Welcome to the Project Management Application!</h2>
      <p class="lead jumbotron__z">
        You'll love managing your projects with our SaaS application.  Please take a look at our great plans.
      </p>
      <div class="jumbotron__bg"></div>
    </div>
    <div class="row">
      <div class="page-home__plans clearfix">
        <div class="col-md-6 page-home__plan">
          <div class="page-home__plan-title-container">
            <h2 class="page-home__plan-title">Free Plan</h2>
            <div class="page-home__price">
              Free
            </div>
          </div>
          <div class="page-home__features">
            <ul class="page-home__features-items clearfix">
              <li class="page-home__features-item col-md-6"><i class="fa fa-check-square-o"></i> Unlimited File Uploads</li>
              <li class="page-home__features-item col-md-6"><i class="fa fa-check-square-o"></i> Responsive Design</li>
              <li class="page-home__features-item col-md-6"><i class="fa fa-check-square-o"></i> Access Anywhere</li>
              <li class="page-home__features-item col-md-6"><i class="fa fa-check-square-o"></i> 1 Project</li>
            </ul>
          </div>
          <p><%= link_to 'Sign Up', new_user_registration_path(plan: 'free'), class: 'btn btn-primary page-home__sign-up' %></p>
        </div>

        <div class="col-md-6 page-home__plan">
          <div class="page-home__plan-title-container">
            <h2 class="page-home__plan-title">Premium Plan</h2>
            <div class="page-home__price">
              $10
            </div>
          </div>
          <div class="page-home__features">
            <ul class="page-home__features-items clearfix">
              <li class="page-home__features-item col-md-6"><i class="fa fa-check-square-o"></i> Unlimited File Uploads</li>
              <li class="page-home__features-item col-md-6"><i class="fa fa-check-square-o"></i> Responsive Design</li>
              <li class="page-home__features-item col-md-6"><i class="fa fa-check-square-o"></i> Access Anywhere</li>
              <li class="page-home__features-item col-md-6"><i class="fa fa-check-square-o"></i> Unlimited Projects</li>
            </ul>
          </div>
          <p><%= link_to 'Sign Up', new_user_registration_path(plan: 'premium'), class: 'btn btn-primary page-home__sign-up' %></p>
        </div>
      </div>
    </div>
  <% end %>
</div> 
