<div class="page-home">
  <% if current_user %>
    <h3>Organization: <%= @tenant.name %></h3>
  <% else %>
    <div class="jumbotron">
      <h2>Welcome to the Project Management Application!</h2>
      <p class="lead">
        You'll love managing your projects with our SaaS application.  Please take a look at our great plans.
      </p>
    </div>
    <div class="row">
      <div class="page-home__plans clearfix">
        <div class="col-lg-3 col-lg-offset-3 page-home__plan">
          <h2>Free Plan</h2>
          <div class="page-home__price">
            Price: Free
          </div>
          <div class="page-home__features">
            <ul class="page-home__features-items">
              <li class="page-home__features-item">Unlimited File Uploads</li>
              <li class="page-home__features-item">Responsive Design</li>
              <li class="page-home__features-item">Access Anywhere</li>
              <li class="page-home__features-item">1 Project</li>
            </ul>
          </div>
          <p><%= link_to 'Sign Up', new_user_registration_path(plan: 'free'), class: 'btn btn-primary page-home__sign-up' %></p>
        </div>

        <div class="col-lg-3 page-home__plan">
          <h2>Premium Plan</h2>
          <div class="page-home__price">
            Price: $10
          </div>
          <div class="page-home__features">
            <ul class="page-home__features-items">
              <li class="page-home__features-item">Unlimited File Uploads</li>
              <li class="page-home__features-item">Responsive Design</li>
              <li class="page-home__features-item">Access Anywhere</li>
              <li class="page-home__features-item page-home__features-item--extra">Unlimited Projects</li>
            </ul>
          </div>
          <p><%= link_to 'Sign Up', new_user_registration_path(plan: 'premium'), class: 'btn btn-primary page-home__sign-up' %></p>
        </div>
      </div>
    </div>
  <% end %>
</div> 
