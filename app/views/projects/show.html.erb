<%- model_class = Project -%>
<div class="page-header">
  <h3><%= @project.title %></h3>
  <h3><small>Organization: <%= tenant_name @project.tenant_id %></small></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @project.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:details) %>:</strong></dt>
  <dd><%= @project.details %></dd>
  <dt><strong><%= model_class.human_attribute_name(:expected_completion_date) %>:</strong></dt>
  <dd><%= @project.expected_completion_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tenant_id) %>:</strong></dt>
  <dd><%= @project.tenant_id %></dd>
</dl>

<h3>Artifacts</h3>
  <% if @project.artifacts.present? %>
    <%= render 'artifacts/list', artifacts: @project.artifacts %>
  <% else %>
    <p class="lead">No Artifacts Yet!</p>
    <%= link_to 'New Artifact', new_artifact_path(project_id: @project.id), 
                                :class => 'btn btn-primary' %>
  <% end %>
<br><br>

<%= link_to t('< Back to Organization Home'), root_path, :class => 'btn btn-default'  %>
<%= link_to 'Edit', edit_tenant_project_path(project: @project, tenant: @project.tenant_id), 
                    :class => 'btn btn-default' %>
<%= link_to 'Remove Project', tenant_project_path(@project, @project.tenant_id),
                              :method => 'delete',
                              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                              :class => 'btn btn-danger' %>
